    private void deconnexionActionPerformed(ActionEvent evt) {
        int confirm = JOptionPane.showConfirmDialog(this,
                "Êtes-vous sûr de vouloir vous déconnecter?",
                "Confirmation de déconnexion",
                JOptionPane.YES_NO_OPTION,
                JOptionPane.QUESTION_MESSAGE);
        if (confirm == JOptionPane.YES_OPTION) {
            dispose();
            new Accueil().setVisible(true);
        }
    }

    private void rdvActionPerformed(java.awt.event.ActionEvent evt) {
        dispose();
        new Ad_Rdv().setVisible(true);
    }

    private void patActionPerformed(java.awt.event.ActionEvent evt) {
        dispose();
